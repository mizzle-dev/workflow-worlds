{
  "name": "@workflow-worlds/turso",
  "version": "0.1.0",
  "description": "Turso/libSQL World implementation for Workflow DevKit",
  "author": "Dustin Townsend",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mizzle-dev/workflow-worlds.git",
    "directory": "packages/turso"
  },
  "homepage": "https://github.com/mizzle-dev/workflow-worlds/tree/main/packages/turso#readme",
  "bugs": {
    "url": "https://github.com/mizzle-dev/workflow-worlds/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "workflow-turso-setup": "./bin/setup.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/drizzle/schema.d.ts",
      "default": "./dist/drizzle/schema.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "default": "./dist/cli.js"
    },
    "./migrations/*.sql": "./src/drizzle/migrations/*.sql"
  },
  "scripts": {
    "build": "tsc && chmod +x bin/setup.js",
    "dev": "tsc --watch",
    "test": "pnpm build && vitest run",
    "test:only": "vitest run",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:push": "node dist/cli.js"
  },
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "@workflow/errors": "4.0.1-beta.6",
    "@workflow/world": "4.0.1-beta.7",
    "@vercel/queue": "^0.0.0-alpha.29",
    "cbor-x": "1.6.0",
    "dotenv": "^16.4.0",
    "drizzle-orm": "^0.38.0",
    "ulid": "^2.3.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@workflow/world-testing": "4.0.1-beta.23",
    "@workflow-worlds/testing": "workspace:*",
    "drizzle-kit": "^0.31.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "files": [
    "dist",
    "bin",
    "src/drizzle/migrations"
  ],
  "keywords": [
    "workflow",
    "world",
    "turso",
    "libsql",
    "sqlite",
    "durable-functions"
  ],
  "publishConfig": {
    "access": "public"
  }
}
